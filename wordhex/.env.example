# WordHex Environment Variables
# Copy this file to .env.local and fill in your actual values

# ========================================
# SUPABASE (Frontend - Data API)
# ========================================
# Get these from: Supabase Dashboard → Settings → API

VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ========================================
# DISCORD (OAuth Integration)
# ========================================
# Get these from: Discord Developer Portal → OAuth2 → General

VITE_DISCORD_CLIENT_ID=1234567890
VITE_DISCORD_REDIRECT_URI=https://wordhex.dussey.dev/auth/callback

# ========================================
# BACKEND (Node.js/Python Server)
# ========================================
# Connection String - Use Postgres protocol
# Get from: Supabase Dashboard → Settings → Database → Connection String

DATABASE_URL=postgresql://postgres:password@db.xxxxx.supabase.co:5432/postgres

# Service Role Key - KEEP PRIVATE! Never expose to frontend
# Get from: Supabase Dashboard → Settings → API → Service Role Key

SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ========================================
# ENVIRONMENT
# ========================================

NODE_ENV=production
# or: development, staging

# ========================================
# GAME SETTINGS
# ========================================

GAME_GRID_SIZE=5
GAME_ROUND_DURATION_SECONDS=30
GAME_MAX_PLAYERS=6
GAME_TOTAL_ROUNDS=5

# ========================================
# API SETTINGS
# ========================================

API_BASE_URL=https://wordhex-api.dussey.dev
# or: http://localhost:3000 (development)

CORS_ORIGIN=https://wordhex.dussey.dev
# For local dev: http://localhost:5173

# ========================================
# LOGGING
# ========================================

LOG_LEVEL=info
# Options: debug, info, warn, error

ENABLE_ERROR_TRACKING=true
# For production error monitoring (Sentry, LogRocket, etc)

# ========================================
# FEATURE FLAGS
# ========================================

ENABLE_PRACTICE_MODE=true
ENABLE_MULTIPLAYER=true
ENABLE_RANKED_MODE=false
ENABLE_LEADERBOARD=true

# ========================================
# NOTES
# ========================================
# Frontend (.env.local or .env):
#   - Only include VITE_* variables
#   - VITE_SUPABASE_KEY is public (anon key)
#   - Safe to commit .env.example
#
# Backend (.env):
#   - Include all variables
#   - Keep DATABASE_URL and SERVICE_ROLE_KEY SECRET
#   - Never commit actual .env file
#   - Use Netlify Environment Variables instead
#
# Netlify Deployment:
#   1. Dashboard → Settings → Build & Deploy → Environment
#   2. Add each variable (name = value)
#   3. Redeploy
